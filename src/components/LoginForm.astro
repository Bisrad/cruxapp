<div class='flex flex-col'>
    <div class='text-center mb-3'>
        <h1 class='text-xl font-bold'>Crux App Login</h1>
    </div>
    <div class='flex justify-center items-center'>
        <form id='loginForm' class='flex flex-col max-w-xs mx-auto'>
            <div class='mb-4'>
                <label class='block' for='username'>Name</label>
                <input
                    class='border border-gray-300 px-2 py-1 w-full'
                    type='text'
                    name='username'
                    id='username'
                />
            </div>

            <div class='mb-4'>
                <label class='block' for='password'>Password</label>
                <input
                    class='border border-gray-300 px-2 py-1 w-full'
                    type='password'
                    name='password'
                    id='password'
                />
            </div>

            <input
                class='bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded'
                type='submit'
                value='Submit'
            />
        </form>
    </div>
</div>

<script>
    import '../scripts/signIn.js';
</script>
